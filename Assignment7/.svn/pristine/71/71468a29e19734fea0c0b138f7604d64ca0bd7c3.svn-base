<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>

    <canvas id="canvas" width="300" height="300"></canvas>
    <script>
        var canvas = document.getElementById('canvas');
        var context = canvas.getContext('2d');
        var centerX = canvas.width / 2;
        var centerY = canvas.height / 2;
        var lineWidth = 5;
        var radius = ((canvas.width < canvas.height) ? canvas.width : canvas.height) / 2 - lineWidth;
        var eyeRadius = radius * .1;
        var eyeXOffset = radius * .3;
        var eyeYOffset = radius * .45;
        // draw the yellow circle
        context.beginPath();
        context.arc(centerX, centerY, radius, 0, 2 * Math.PI, false);
        context.fillStyle = 'yellow';
        context.fill();
        context.lineWidth = lineWidth;
        context.strokeStyle = 'black';
        context.stroke();
        // draw the eyes
        var eyeX1 = centerX - eyeXOffset;
        var eyeX2 = centerX + eyeXOffset;
        var eyeY = centerY - eyeXOffset;
        context.beginPath();
        context.arc(eyeX1, eyeY, eyeRadius * 1.50, 0, 2 * Math.PI, false);
        context.fillStyle = 'white';
        context.fill();
        context.lineWidth = eyeRadius * .15;
        context.strokeStyle = 'black';
        context.stroke();
        context.beginPath();
        context.arc(eyeX2, eyeY, eyeRadius * 1.50, 0, 2 * Math.PI, false);
        context.fillStyle = 'white';
        context.fill();
        context.lineWidth = eyeRadius * .15;
        context.strokeStyle = 'black';
        context.stroke();
        context.beginPath();
        context.arc(eyeX1, eyeY, eyeRadius, 0, 2 * Math.PI, false);
        context.arc(eyeX2, eyeY, eyeRadius, 0, 2 * Math.PI, false);
        context.fillStyle = 'red';
        context.fill();
        // draw the mouth
        context.beginPath();
        context.lineWidth = lineWidth * .7;
        context.arc(centerX, centerY, radius * .60, 0, Math.PI, false);
        context.stroke();
        // draw the nose
        context.beginPath();
        context.fillStyle = 'black';
        var noseX = centerX;
        var noseY = centerY-radius*.1;
        var noseWidth = radius*.15;
        context.moveTo(noseX, noseY);
        context.lineTo(noseX+noseWidth, noseY+noseWidth);
        context.lineTo(noseX, noseY+(2*noseWidth));
        context.lineTo(noseX-noseWidth, noseY+noseWidth);
        context.closePath();
        context.fill();
    </script>
</body>
</html>