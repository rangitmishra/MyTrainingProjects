package com.nagarro.airline.utilities;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class JDBCUtilities 
{
	private final String DB_URL = "jdbc:mysql://localhost:3306/airline";
	private final String USER = "root";
	private final String PASS = "root";
	private Connection myConn;
	private static JDBCUtilities instance = new JDBCUtilities();
	
	private JDBCUtilities()
	{
		try {
			myConn = DriverManager.getConnection(DB_URL,USER,PASS);
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
	public static JDBCUtilities getInstance()
	{
		return instance;
	}
	
	public Connection getConnection()
	{
		return myConn;
	}
}
